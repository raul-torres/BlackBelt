@model Actividad


<header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand">Dojo Activity Center</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <a href="/logout" class="text-right text-dark nav-link">Logout</a>
                    <a href="/Home" class="text-left text-dark nav-link">Home</a>
                </div>
            </div>
        </nav>
</header>

<h2 class="display-4">Create an Activity</h2>
<br>
<form action="/newactividad" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Title</label>
                <span class="error1" asp-validation-for="Title"></span>
                <input class="form-control" placeholder="Title" asp-for="Title">
            </div>
            <div class="form-group">
                <label>Date</label>
                <span class="error1" asp-validation-for="Date"></span>
                <input class="form-control" placeholder="" asp-for="Date" type="date">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Time</label>
                <span class="error1" asp-validation-for="Tiempo"></span>
                <input class="form-control" placeholder="" asp-for="Tiempo" type="time">
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Duration</label>
                        <input class="form-control" placeholder="" asp-for="Duration" type="number">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>‎‎‎‏‏‎ ‎</label>
                        <select asp-for="DurationSpan" class="form-control">
                            <option value="Minutes">Minutes</option>
                            <option value="Hours">Hours</option>
                            <option value="Days">Days</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Description</label>
        <span class="error1" asp-validation-for="Description"></span>
        <textarea id="" cols="30" rows="10" class="form-control" asp-for="Description" ></textarea>
    </div>
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <input type="submit" value="Create Activity" class="btn btn-primary">
        </div>
    </div>
</form>